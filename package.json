{
  "name": "easyshare-extension",
  "version": "1.0.0",
  "description": "Browser extension for quick file sharing",
  "scripts": {
    "build": "node build.js",
    "watch": "node build.js",
    "copy-assets": "node build.js",
    "dev": "npm run build",
    "clean": "rmdir /s /q dist 2>nul || rm -rf dist",
    "setup-env": "copy .env.example .env 2>nul || cp .env.example .env",
    "build:dev": "npm run build",
    "build:prod": "npm run build"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.50.3",
    "jszip": "^3.10.1"
  }
}
