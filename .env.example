# =============================================================================
# EXTENSION SETTINGS
# =============================================================================
# Default upload service (vercel-api, supabase, file.io, 0x0.st, test)
DEFAULT_SERVICE=vercel-api

# Maximum file size in bytes (default: 100MB)
MAX_FILE_SIZE=104857600

# Maximum number of files in upload history
MAX_HISTORY_ITEMS=50

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Show browser notifications for uploads (true/false)
SHOW_NOTIFICATIONS=true

# Automatically copy download links to clipboard (true/false)
AUTO_COPY_TO_CLIPBOARD=true

# Keep upload history (true/false)
KEEP_UPLOAD_HISTORY=true

# =============================================================================
# VERCEL API CONFIGURATION
# =============================================================================
# Your Vercel app URL (e.g., https://your-app.vercel.app)
VERCEL_URL=easyshare-vnbw.vercel.app

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug logging (true/false)
DEBUG_MODE=false

# Extension version (auto-populated during build)
EXTENSION_VERSION=4.0.0

# =============================================================================
# EXTERNAL SERVICE URLS (for fallback services)
# =============================================================================
# File.io API endpoint
FILEIO_API_URL=https://file.io

# 0x0.st API endpoint
ZEROXZERO_API_URL=https://0x0.st

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Allowed file types (comma-separated, * for all)
