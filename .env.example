# EasyShare Extension Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Your Supabase project URL (e.g., https://your-project.supabase.co)
SUPABASE_URL=https://your-project.supabase.co

# Your Supabase anon/public key
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase storage bucket name for file uploads
SUPABASE_BUCKET_NAME=uploads

# Default link expiration time in seconds (3600 = 1 hour)
SUPABASE_LINK_EXPIRATION=3600

# =============================================================================
# EXTENSION SETTINGS
# =============================================================================
# Default upload service (supabase, file.io, 0x0.st, test)
DEFAULT_SERVICE=supabase

# Maximum file size in bytes (default: 100MB)
MAX_FILE_SIZE=104857600

# Maximum number of files in upload history
MAX_HISTORY_ITEMS=50

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Show browser notifications for uploads (true/false)
SHOW_NOTIFICATIONS=true

# Automatically copy download links to clipboard (true/false)
AUTO_COPY_TO_CLIPBOARD=true

# Keep upload history (true/false)
KEEP_UPLOAD_HISTORY=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug logging (true/false)
DEBUG_MODE=false

# Extension version (auto-populated during build)
EXTENSION_VERSION=4.0.0

# =============================================================================
# EXTERNAL SERVICE URLS (for fallback services)
# =============================================================================
# File.io API endpoint
FILEIO_API_URL=https://file.io

# 0x0.st API endpoint
ZEROXZERO_API_URL=https://0x0.st

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Allowed file types (comma-separated, * for all)
ALLOWED_FILE_TYPES=*

# Maximum upload timeout in milliseconds
UPLOAD_TIMEOUT=300000
